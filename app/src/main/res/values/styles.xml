<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Light">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="progressBarStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress</item>
    </style>

    <style name="progressBarStyle.darkBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="progressBarStyle.lightBackGround">
        <item name="android:background">@color/white</item>
    </style>
</resources>